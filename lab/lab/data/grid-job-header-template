#! /bin/bash
### Set name.
#$ -N %(name)s
### Set shell.
#$ -S /bin/bash
### Execute job from current working directory.
#$ -cwd
### Export all environment variables to the job context.
#$ -V
### Redirect stdout and stderr.
#$ -e %(errfile)s
#$ -o %(logfile)s
### Set queue.
#$ -q %(queue)s
### Number of tasks.
#$ -t 1-%(num_tasks)d
### Priority ([-1023,1024], default: 0).
#$ -p %(priority)d
### Restrict to certain machines.
%(host_spec)s
### Send mail? -m can be e.g. (b)eginning, (e)nd, (n)ever.
%(notification)s
### Extra options.
%(extra_options)s

if [ -s "%(errfile)s" ]; then
    echo "There was output on stderr. Please check '%(errfile)s'. Aborting."
    exit 1
fi
